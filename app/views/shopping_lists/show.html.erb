<p id="notice"><%= notice %></p>

<p>
  <strong>Shopping List:</strong>
  <%= @shopping_list.name%>
</p>

<strong>Products in List:</strong>
<% if @shopping_list.products.any? %>
  <ul>
    <% @shopping_list.products.each do |product| %>
      <li><%= link_to product.name, product %></li>
    <% end %>
  </ul>
<% else %>
  <p>No products in list.</p>
<% end %>


<%= link_to 'Edit', edit_shopping_list_path(@shopping_list) %> |
<%= link_to 'Back', shopping_lists_path %>
